<div  ng-app="MyApp">

    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/HomeWork/service.js"></script>
    <script src="~/Scripts/HomeWork/demo.js"></script>

    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li><a href="#Books">List of books</a></li>
            <li><a href="#Add">Add</a></li>
            <li><a href="#Edit">Edit</a></li>
            <li><a href="#Delete">Delete</a></li>
        </ul>

    </div>

    <div ng-view>
    </div>






    <div class="row">
        <div class="col-lg-2">
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
                    Genres
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" id="MyDropdown" role="menu" aria-labelledby="menu1"></ul>
            </div>
        </div>

        <div class="col-lg-2">
            <button type="button" id="ShowCreateForm" class="btn btn-default">Create new Book</button>

        </div>

        <div class="col-lg-2">
            <button type="button" id="ShowAll" class="btn btn-default">Show all books</button>

        </div>

    </div>
    <div class="row mytable">
      

        <div class="col-lg-8">
            <div id="MyTable">

            </div>
        </div>

        <div id="divEditBook" class="col-lg-2" style="visibility:hidden">

            <form id="formEditBook" @*action="api/ApiBooks/CreateBook" method="post"*@>
                <div class="form-group">
                    <input placeholder="Name..." type="text" name="Name" class="form-control" id="EditName">
                </div>

                <div class="form-group">
                    <input placeholder="Age..." type="text" name="Age" class="form-control" id="EditAge">
                </div>


                <div class="form-group">
                    <input placeholder="Publication..." type="text" name="Publication" class="form-control" id="EditPublication">
                </div>


                <button type="submit" id="buttonEditBook" class="btn btn-default">Submit</button>
            </form>

        </div>


    </div>
    </div>